# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/social_media_ai_saas"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# AI API Keys
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# LinkedIn OAuth
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Google Drive OAuth (for Auto-Pilot Drive Sync)
GOOGLE_DRIVE_CLIENT_ID="your-google-drive-client-id"
GOOGLE_DRIVE_CLIENT_SECRET="your-google-drive-client-secret"

# Cloudinary Image Storage (RECOMMENDED - Free tier available)
# Sign up at: https://cloudinary.com/users/register/free
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# AWS S3 Storage (Alternative to Cloudinary - Optional)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"

# Redis (for session storage and queues)
REDIS_URL="redis://localhost:6379"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Social Media AI SaaS"

# CRON Job Security (for internal node-cron on Railway)
# Generate with: openssl rand -base64 32
CRON_SECRET="your-random-cron-secret-key"

# Enable CRON in development (optional, default: disabled in dev, enabled in production)
# Set to "true" to test cron jobs locally
ENABLE_CRON="false"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Development/Production Environment
NODE_ENV="development"

# Railway specific (when deploying to Railway)
PORT="3000"